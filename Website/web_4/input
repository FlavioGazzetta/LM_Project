                <a href="#search"><img src="icons/search.svg" alt="Search"></a>
                <a href="#login"><img src="icons/login.svg" alt="Login"></a>
                <a href="#social"><img src="icons/social.svg" alt="Social Media"></a>
            </div>
            <div class="hamburger-menu">
                <input type="checkbox" />
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
    </header>

    <!-- // Hero Section -->
