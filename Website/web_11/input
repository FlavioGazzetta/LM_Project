}

.hero h1, .hero p {
    margin: 0;
    padding: 0 20px;
}

.hero .btn {
    background-color: #007bff; /* Accent color */
    border: none;
    transition: background-color 0.3s ease;
}

.hero .btn:hover {
    background-color: #0056b3; /* Darker accent color */
}

/* Featured Section */
.featured-slider {
    margin: 80px 0;
}

/* Footer */
